%ion-view{ title: "TipGuide", "animation" => "slide-right" }
  %ion-content{ "ng-controller" => "tipGuideCtrl" }
    .list.guide-list
      %label.item.item-input
        %input{ type: "text", "ng-model" => "search.$", placeholder: "Search" }
      .item.item-avatar-left{ "ng-repeat" => "country in guide | filter : search | orderBy : 'name' : reverse" }
        %img{ src: "./img/{{ country.code }}.png"}
        %h2 
          {{ country.name }}: 
          %span {{ country.avgTip }}
        %p {{ country.notes }}
